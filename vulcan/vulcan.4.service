[Unit]
Description=Vulcan 4
After=docker.service

[Service]
User=core
Restart=always
TimeoutSec=180

ExecStartPre=/usr/bin/docker pull mailgun/vulcand
ExecStart=/bin/bash -c '/usr/bin/docker start -a vulcan4 || docker run --rm --name vulcan4 -p 80:80 -p 8182:8182 mailgun/vulcand /opt/vulcan/vulcand -apiInterface="0.0.0.0" -interface="0.0.0.0" -etcd="http://172.17.42.1:4001" -port=80 -apiPort=8182'
ExecStop=/usr/bin/docker stop vulcan4

[X-Fleet]
X-Conflicts=vulcan*
